######

NPM=npm
RMRF=rm -rf

######

all::

######

SUBDIRS :=
SUBDIRS += TEST

######

all:: ; $(NPM) install

######

all:: ; \
for i in $(SUBDIRS); do $(MAKE) -C $$i testall; done

######

cleanall:: ; $(RMRF) ./node_modules
cleanall:: ; $(RMRF) ./package-lock.json

######

###### end of [Makefile_test] ######
